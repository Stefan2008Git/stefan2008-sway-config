{
  "layer": "top",
  "position": "top",
  "height": 33,
  "margin-top": 10,
  "margin-left": 10,
  "margin-right": 10,
  "spacing": 1,

  // Modules
  "modules-left": [
    "custom/launcher",
    "mpris"
  ],

  "modules-center": [
    "sway/workspaces"
  ],

  "modules-right": [
    "pulseaudio",
    "cpu",
    "memory",
    "bluetooth",
    "battery",
    "battery#bat1",
    "network",
    "tray",
    "custom/notification",
    "clock",
    "custom/power"
  ],

  "custom/launcher": {
        "format":"<span size='x-large'> Ôå¢ </span>",
        "on-click": "exec nwg-drawer",
        "tooltip": false
  },
  "clock": {
    "format": "{:%H:%M:%S}",
    "format-alt": "{:%d/%m/%Y}",
    "timezone": "Europe/Vienna",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "interval": 1,
    "calendar": {
      "mode": "month",
      "format": {
        "months": "<span color='#cecece'><b>{}</b></span>",
        "days": "<span color='#dadada'><b>{}</b></span>",
        "weekdays": "<span color='#cecece'><b>{}</b></span>",
        "today": "<span color='#ffffff'><b><u>{}</u></b></span>"
      }
    }
  },
  "battery": {
    "bat": "BAT0",
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-full": "{icon} {capacity}%",
    "format-charging": "Ôá¶ {capacity}%",
    "format-plugged": "Ôá¶ {capacity}%",
    "format-icons": [
      "ÔâÑ ",
      "ÔâÉ ",
      "ÔâÇ ",
      "ÔâÅ ",
      "ÔâÄ "
    ],
    "tooltip-format": "{time}",
    "interval": 1,
    "on-click": "control -p"
  },
  "battery#bat1": {
    "bat": "BAT1",
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-full": "{icon} {capacity}%",
    "format-charging": "Ôá¶ {capacity}%",
    "format-plugged": "Ôá¶ {capacity}%",
    "format-icons": [
      "ÔâÑ ",
      "ÔâÉ ",
      "ÔâÇ ",
      "ÔâÅ ",
      "ÔâÄ "
    ],
    "tooltip-format": "{time}",
    "interval": 1,
    "on-click": "control -p"
  },
  "battery#bat2": {
    "bat": "BAT2"
  },
  "network": {
        "interval": 5,
        "format-wifi": "Ôá´ ", // Icon: wifi
        "format-ethernet": "ÔÉ¨ ", // Icon: ethernet
        "format-disconnected": "‚ö†",
        "tooltip-format": "{essid} ({signalStrength}%)\n{ifname}: {ipaddr}",
        "on-click": "xfce4-terminal -e 'nmtui'"
  },
  "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{icon} {volume}%",
        "format-bluetooth": "{volume}% {icon} Ôäî {format_source}",
        "format-bluetooth-muted": " Muted {icon} Ôäî {format_source}",
        "format-muted": "Muted",
        "format-icons": {
            "headphone": " ÔÄ• ",
            "hands-free": " Ôñê ",
            "headset": " Ôñê ",
            "phone": " ÔÇï ",
            "portable": " ÔÇï ",
            "car": " ÔÜπ ",
            "default": ["ÔÄ¶", "ÔÄß", " ÔÄ®  "]
        },
        "on-click": "pavucontrol"
  },
  "bluetooth": {
    "format": "Ôäî On",
    "format-disabled": "Û∞Ç≤ Off",
    "format-connected": "Û∞Ç± Connected",
    "on-click": "blueman-manager"
  },
  "tray": {
        "icon-size": 15,
        "spacing":1
  },
  "custom/power": {
        "format":" ‚èª  ",
        "on-click": "exec ~/.config/sway/scripts/power_Menu.py",
        "tooltip": false
  },
  "custom/notification": {
      "tooltip": false,
      "format": "{icon}",
      "format-icons": {
      "notification": "ÔÉ≥ <span foreground='#f38ba8'><sup>ÔëÑ </sup></span> ",
      "none": "ÔÉ≥ ",
      "dnd-notification": "Ôá∂ <span foreground='#f38ba8'><sup>ÔëÑ </sup></span> ",
      "dnd-none": "Ôá∂ "
    },
      "return-type": "json",
      "exec-if": "which swaync-client",
      "exec": "swaync-client -swb",
      "on-click": "swaync-client -t -sw",
      "on-click-right": "swaync-client -d -sw",
      "escape": true
  },
  "mpris": {
	  "format": " Playing: {player_icon} {title} - {position} / {length}",
	  "format-paused": " Paused: {status_icon} {title} - {position} / {length}",
    "interval": 1,
	  "player-icons": {
		  "default": "‚ñ∂",
		  "mpv": "üéµ"
	},
	"status-icons": {
		"paused": "‚è∏"
	},
	  "ignored-players": ["firefox"]
  },
  "cpu": {
        "interval": 5,
        "format": "Ôíº {usage:>3}% ",
        "states": {
            "warning": 70,
            "critical": 90,
        },
        "on-click": "footclient -T waybar_htop -e htop"
    },

    "memory": {
        "interval": 5,
        "format": "ÓøÖ {:>3}%",
        "on-click": "footclient -T waybar_htop -e htop",
        "states": {
            "warning": 70,
            "critical": 90
        }
    }
}
